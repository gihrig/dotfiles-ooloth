  editor = code --wait
  excludesfile = ~/.config/git/ignore

[credential]
  helper = osxkeychain

[diff]
  colorMoved = true
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[fetch]
  prune = true
  pruneTags = true

[github]
	user = ooloth

[init]
	defaultBranch = main

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait $MERGED

[pull]
  rebase = false

[push]
  autoSetupRemote = true
  default = simple

[status]
  showStash = true

