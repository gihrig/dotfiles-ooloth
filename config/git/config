[core]
  editor = nvim
  excludesfile = ~/.config/git/ignore

[credential]
  helper = osxkeychain

[diff]
  colorMoved = true

[fetch]
  prune = true
  pruneTags = true

[github]
	user = ooloth

[init]
	defaultBranch = main

# see: https://github.com/whiteinge/diffconflicts#installation
[merge]
  tool = vimdiff1
  # tool = diffconflicts
  # tool = fugitive

[mergetool]
  hideResolved = true
  keepBackup = false

[mergetool "diffconflicts"]
  cmd = 'nvim -c DiffConflicts "$MERGED" "$BASE" "$LOCAL" "$REMOTE"'
  trustExitCode = true

[mergetool "fugitive"]
  cmd = 'nvim -f -c "Gvdiffsplit!" "$MERGED"'

[pull]
  rebase = false

[push]
  autoSetupRemote = true
  default = simple

[status]
  showStash = true

